# This file is automatically generated, do not edit
export LUA_PATH
export LUA_CPATH
ESBUILD=ezbuild

!compile_js = |> ^ compile_js %f > %o^ lapis-eswidget compile_js --moonscript --file %f > %o |>
!join_bundle = |> ^ join bundle %o^ (for file in %f; do echo 'import "../../../'$file'";' | sed 's/\.js//'; done) > %o |>
!esbuild_bundle_minified = |> ^ esbuild minified bundle %o^ NODE_PATH=spec/static/js $(ESBUILD) --target=es6 --log-level=warning --bundle --sourcemap --minify %f --outfile=%o |>

: spec/views/login.moon | $(TOP)/<moon> |> !compile_js |> spec/views/login.js {package_main}
: spec/views/user_profile.moon | $(TOP)/<moon> |> !compile_js |> spec/views/user_profile.js {package_main}
: spec/views/user/settings.moon | $(TOP)/<moon> |> !compile_js |> spec/views/user/settings.js

# package: main
: {package_main} spec/views/user/settings.js |> !join_bundle |> spec/static/js/main.js
: spec/static/js/main.js | $(TOP)/<coffee> |> !esbuild_bundle_minified |> spec/static/main.min.js

# package: settings
: spec/views/user/settings.js |> !join_bundle |> spec/static/js/settings.js
: spec/static/js/settings.js | $(TOP)/<coffee> |> !esbuild_bundle_minified |> spec/static/settings.min.js
